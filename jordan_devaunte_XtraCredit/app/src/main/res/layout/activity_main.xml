<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">


    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/weatherSpinner"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/currentWeatherView"
        android:visibility="visible">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Winter Park"
            android:textSize="30sp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="85dp"
            android:id="@+id/cityLabel"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Weather Condition"
            android:textSize="15sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="105dp"
            android:id="@+id/conditionLabel"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="81*"
            android:textSize="70sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="125dp"
            android:id="@+id/degreesLabel"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hourlyWeatherView"
        android:visibility="gone">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hourlyList">



            </ListView>



        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tenDayWeatherView"
        android:visibility="gone">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tenDayList">



        </ListView>



    </LinearLayout>



</LinearLayout>
